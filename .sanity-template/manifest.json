{
  "version": 2,
  "title": "Gatsby Starter Stripemart",
  "description": "A basic and minimal e-commerce store using Gatsby, SANITY, Stripe, Use-Shopping-Cart and Netlify",
  "previewMedia": {
    "type": "image",
    "src": "assets/gatsby-starter-stripemart-preview.png",
    "alt": "Gatsby Starter Stripemart"
  },
  "technologies": [
    {
      "id": "gatsby",
      "name": "Gatsby",
      "url": "https://www.gatsbyjs.com/"
    },
    {
      "id": "netlify",
      "name": "Netlify",
      "url": "https://www.netlify.com/"
    },
    {
      "id": "stripe",
      "name": "Stripe",
      "url": "https://www.stripe.com/"
    }
  ],
  "deployment": {
    "provider": "netlify",
    "sites": [
      {
        "id": "studio",
        "type": "studio",
        "title": "Stripemart Studio",
        "description": "A custom studio for gatsby-starter-stripemart.",
        "dir": "./studio",
        "previewMedia": {
          "type": "image",
          "src": "assets/gatsby-starter-stripemart-studio.png",
          "alt": "A preview image of the Sanity Studio."
        },
        "buildSettings": {
          "base": "/studio",
          "dir": "/studio/dist",
          "cmd": "yarn build"
        },
        "requirements": ["build-hook"]
      },
      {
        "id": "web",
        "type": "web",
        "title": "Gatsby Frontend",
        "description": "Gatsby frontend for gatsby-starter-stripemart.",
        "dir": "./web",
        "previewMedia": {
          "type": "image",
          "src": "assets/gatsby-starter-stripemart-preview.png",
          "alt": "A preview image of the webpage."
        },
        "buildSettings": {
          "base": "/web",
          "dir": "/web/public",
          "cmd": "yarn build"
        },
        "requiredCorsOrigins": [
          {
            "origin": "http://localhost:8000",
            "allowCredentials": true
          },
          {
            "origin": "http://localhost:8888",
            "allowCredentials": true
          }
        ],
        "requiredTokens": [
          {
            "role": "deploy-studio",
            "label": "GraphQL API Deployer"
          }
        ],
        "requirements": ["build-hook"]
      }
    ]
  }
}
